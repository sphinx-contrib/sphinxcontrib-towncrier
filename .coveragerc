[html]
show_contexts = true
skip_covered = false

[paths]
source =
  src
  */src
  *\src
  */lib/pypy*/site-packages
  */lib/python*/site-packages
  *\Lib\site-packages

[report]
# exclude_also =
exclude_lines =
  ^\s*@pytest\.mark\.xfail
fail_under = 77.88
skip_covered = true
skip_empty = true
show_missing = true

[run]
branch = true
cover_pylib = false
# https://coverage.rtfd.io/en/latest/contexts.html#dynamic-contexts
# dynamic_context = test_function  # conflicts with `pytest-cov` if set here
parallel = true
plugins =
  covdefaults
relative_files = true
source =
  .
source_pkgs =
  sphinxcontrib.towncrier
